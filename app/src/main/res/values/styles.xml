<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/colorIcons</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:paddingLeft">@dimen/field_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/field_horizontal_padding</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Material.Button">
        <item name="android:height">48dp</item>
    </style>


    <style name="FieldLabel" parent="@android:style/Widget.Material.TextView">
        <item name="android:paddingLeft">@dimen/field_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/field_horizontal_padding</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
