<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:timePickerDialogTheme">@style/AppTheme.TimePickerDialog</item>
    </style>

    <style name="AppTheme.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/colorIcons</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">@dimen/field_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/field_horizontal_padding</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Material.Button">
        <item name="android:height">@dimen/field_height</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TimePickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item> <!-- header background and cancel/ok buttons text -->
        <!--<item name="android:background">#FF0000</item>--> <!-- background for picker and numbers at the top -->
        <item name="android:textColorSecondary">@color/colorPrimaryLight</item> <!-- Clock -->
        <item name="android:textColorSecondaryInverse">@color/colorSecondaryTextInverse</item> <!-- Disabled hour/minutes in header -->
    </style>

    <style name="FieldLabel" parent="@android:style/Widget.Material.TextView">
        <item name="android:paddingLeft">@dimen/field_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/field_horizontal_padding</item>
        <item name="android:layout_height">@dimen/label_height</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallButton" parent="@android:style/Widget.Material.Button.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
